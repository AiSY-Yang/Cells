<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="Cells">
                <group id="group1" label="group1">
                    <checkBox id="Light" onAction="Light_Click" label="聚光灯" />
                    <button id="button2" label="button2" showImage="false" />
                </group>
                <group id="group2" label="并列同类项">
                    <box id="box1" boxStyle="vertical">
                        <editBox id="editBox1" label="同类项列" showImage="false" />
                        <editBox id="editBox2" label="并列项列" showImage="false" />
                        <comboBox id="splitChar" label="分隔符 " showImage="false">
                            <item id="__id10" label="Tab(并列)" />
                            <item id="__id12" label="Space(空格)" />
                            <item id="__id13" label="-" />
                            <item id="__id14" label="," />
                        </comboBox>
                    </box>
                    <separator id="separator1" />
                    <button id="concatenation" onAction="concatenation_Click" label="执行" size="large" />
                </group>
                <group id="group3" label="group3">
                    <button id="ctrlL" label="左对齐" showImage="false" />
                    <button id="ctrlR" label="右对齐" showImage="false" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>